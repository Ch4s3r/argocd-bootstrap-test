{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "platformAutomerge": true,
  "automerge": true,
  "automergeType": "pr",
  "requiredStatusChecks": [
    "staging-deployment/hello-world"
  ],
  "packageRules": [
    {
      "description": "Auto-merge minor and patch updates after staging deployment succeeds",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Require manual approval for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
